{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["express"],
    "resolveJsonModule": true
  },
  "include": ["./server.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
